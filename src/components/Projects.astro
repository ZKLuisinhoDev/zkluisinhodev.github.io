---
const projects = [
  {
    title: 'KENTUR',
    description: 'Plataforma educativa robusta. Gestión de cursos y estudiantes optimizada.',
    tags: ['Django', 'Python', 'Full Stack'],
    color: 'from-blue-600 to-cyan-600'
  },
  {
    title: 'CEIFOCE',
    description: 'Sistema integral de gestión administrativa desarrollado a medida.',
    tags: ['Python', 'Web App', 'Administración'],
    color: 'from-emerald-600 to-green-600'
  },
  {
    title: 'ECOMINDALAPP',
    description: 'Aplicación innovadora enfocada en soluciones ecológicas y sostenibilidad.',
    tags: ['App Híbrida', 'Backend API', 'UI/UX'],
    color: 'from-orange-600 to-amber-600'
  },
  {
    title: 'Juegos Pygame',
    description: 'Colección de videojuegos 2D interactivos desarrollando lógica compleja.',
    tags: ['Python', 'Pygame', 'Game Dev'],
    color: 'from-purple-600 to-pink-600'
  }
];
---
<section id="projects" class="py-32 px-4 relative">
  <div class="max-w-6xl mx-auto relative z-10">
    <div class="mb-16 text-center">
      <h2 class="text-3xl md:text-5xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-500">
        Proyectos Destacados
      </h2>
      <p class="text-gray-400 max-w-xl mx-auto">
        Una selección de mis trabajos en desarrollo web y software.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {projects.map(project => (
        <div class="group relative rounded-2xl overflow-hidden bg-white/5 border border-white/10 hover:border-white/20 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-1">
          <div class={`h-48 w-full bg-gradient-to-br ${project.color} opacity-80 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center`}>
            <!-- Placeholder for actual image -->
             <span class="text-4xl text-white/80 font-bold tracking-widest">{project.title.substring(0, 2)}</span>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-white group-hover:text-blue-400 transition-colors">
              {project.title}
            </h3>
            <p class="text-gray-400 text-sm mb-6 leading-relaxed">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2">
              {project.tags.map(tag => (
                <span class="text-xs font-medium px-3 py-1 rounded-full bg-white/10 text-gray-300 border border-white/5 group-hover:border-blue-500/30 group-hover:bg-blue-500/10 transition-colors">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
