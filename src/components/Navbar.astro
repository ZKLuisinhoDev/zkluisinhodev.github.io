---
const links = [
  { name: "Inicio", href: "#home" },
  { name: "Proyectos", href: "#projects" },
  { name: "Habilidades", href: "#skills" },
  { name: "Sobre MÃ­", href: "#about" },
  { name: "Contacto", href: "#contact" },
];
---

<nav
  class="fixed top-6 left-1/2 -translate-x-1/2 w-[90%] max-w-5xl z-50 bg-black/60 backdrop-blur-xl border border-white/10 rounded-2xl shadow-2xl"
>
  <div class="px-6 py-3 flex justify-between items-center">
    <a
      href="#home"
      class="text-xl font-black bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent tracking-tighter"
    >
      L<span class="text-white">L</span>
    </a>

    <div class="hidden md:flex items-center gap-8">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="text-xs font-bold uppercase tracking-widest text-gray-400 hover:text-white transition-colors duration-300"
          >
            {link.name}
          </a>
        ))
      }

      <a
        href="/cv-luis-lasso.pdf"
        target="_blank"
        class="ml-4 px-5 py-2 bg-white text-black text-xs font-bold rounded-xl hover:bg-blue-500 hover:text-white transition-all duration-300 transform active:scale-95"
      >
        Download CV
      </a>
    </div>

    <!-- Mobile Menu Button (Minimalist) -->
    <button class="md:hidden text-white p-2">
      <svg
        class="w-6 h-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </div>
</nav>

<script>
  // Simple sticky effect
  window.addEventListener("scroll", () => {
    const nav = document.querySelector("nav");
    if (window.scrollY > 50) {
      nav?.classList.add("top-2", "w-[95%]");
      nav?.classList.remove("top-6", "w-[90%]");
    } else {
      nav?.classList.add("top-6", "w-[90%]");
      nav?.classList.remove("top-2", "w-[95%]");
    }
  });
</script>
